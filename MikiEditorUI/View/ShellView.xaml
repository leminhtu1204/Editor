<Window x:Class="MikiEditorUI.View.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="ShellView" Height="300" Width="300">
    <Grid>
        <DockPanel>
            <StackPanel VerticalAlignment="Top" DockPanel.Dock="Left">
                <Label Content="Page Navigator" />
                <ListView ItemsSource="{Binding CurrentChapter.Pages}" VerticalAlignment="Top" Width="170"  Height="500">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <Border BorderThickness="1" Margin="5"
                                        BorderBrush="#FF000000"
                                        VerticalAlignment="Top">
                                    <Image Source="{Binding ImgPath}" Width="80" Height="120"/>
                                </Border>
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button cal:Message.Attach="AddNewPage">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="10,0,0,0"  Source="../Image/blankimage.jpeg" Width="30" Height="30"></Image>
                        <Label Content="New Page"></Label>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel VerticalAlignment="Top" DockPanel.Dock="Right">
                <Label Content="Chapter" />
                <ListView cal:Message.Attach="ChapterChange" ItemsSource="{Binding Chapters}" SelectedItem="{Binding CurrentChapter}" VerticalAlignment="Top" Width="200">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <Label Content="{Binding Title}"></Label>
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel VerticalAlignment="Top" >
                <Image Margin="10,0,0,0"  Source="../Image/blankimage.jpeg" Width="30" Height="30"></Image>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
